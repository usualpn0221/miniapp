<div class="row">
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= blog.title %></span>
        <span class="card-author">投稿者: <%= link_to "#{blog.user.name}", "/users/#{blog.user.id}", method: :get %></span>
        <br><br>
          <%= simple_format(blog.content) %>
      </div>
      <div class="card-tabs">
        <ul class="tabs tabs-fixed-width">
          <li class="tab"><%= link_to '詳細', "/blogs/#{blog.id}", method: :get %></li>
          <% if user_signed_in? %>
            <% if current_user.id==blog.user.id %>
              <li class="tab"><%= link_to '更新', "/blogs/#{blog.id}/edit", method: :get %></li>
              <li class="tab"><%= link_to '削除', "/blogs/#{blog.id}", method: :delete %></li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
